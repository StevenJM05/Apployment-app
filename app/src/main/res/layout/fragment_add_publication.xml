<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AddPublication">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Campo para el Título -->
        <EditText
            android:id="@+id/titleEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Título"
            android:inputType="text"
            android:maxLength="255"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>

        <!-- Campo para la Descripción -->
        <EditText
            android:id="@+id/descriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripción"
            android:inputType="textMultiLine"
            android:maxLength="1000"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>

        <!-- Campo para la Ubicación -->
        <EditText
            android:id="@+id/locationEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Locación"
            android:inputType="text"
            android:maxLength="255"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>

        <!-- Campo para la Fecha -->
        <EditText
            android:id="@+id/dateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha (YYYY-MM-DD)"
            android:inputType="text"
            android:focusable="false"
            android:clickable="true" />

        <!-- Campo para el Estado -->

        <EditText
            android:id="@+id/IdDprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <EditText
            android:id="@+id/statusEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <!-- Spinner para seleccionar la Profesión -->
        <Spinner
            android:id="@+id/professionSpinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp" />

        <!-- Botón para Enviar -->
        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar Publicación"
            android:textColor="@android:color/white"

            android:background="@drawable/button_bg"
            android:layout_marginTop="16dp"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>
