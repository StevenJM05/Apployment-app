<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PublicationsFragment">

    <!-- Contenedor principal con LinearLayout vertical -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Parte superior con un LinearLayout horizontal para el bot贸n -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <!-- Bot贸n para agregar una publicaci贸n -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:elevation="4dp"
                android:radius="8dp"
                app:cardBackgroundColor="@color/moradoclaro"
                >

                <!-- Button dentro del CardView -->
                <Button
                    android:id="@+id/btn_add_publication"
                    android:layout_width="118dp"
                    android:layout_height="36dp"
                    android:background="?attr/colorPrimary"
                    android:text="Agregar Publicaci贸n"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <!-- Parte inferior con LinearLayout para el RecyclerView -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp">

            <!-- RecyclerView para mostrar las publicaciones -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/publicationsView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
