<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".WorkersFragment"
    >

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:padding="10dp">

        <TextView
            android:id="@+id/nombre_app"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="Apployment"
            android:textColor="@color/white"
            android:textSize="27sp" />

        <ImageView
            android:id="@+id/icononotificaciones"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="-76dp"
            android:src="@drawable/notificaciones"
            app:tint="@color/white"/>

        <ImageView
            android:id="@+id/imagenperfil"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="-47dp"
            android:src="@drawable/perfil"
            app:tint="@color/white"/>
    </LinearLayout>

    <!-- Categorías horizontal -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categorías"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="15dp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Tarjetas de categorías (las que ya tenías) -->
            <!-- Aquí puedes añadir más tarjetas según sea necesario -->
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Título para la lista de perfiles -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perfiles"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="15dp"/>

    <!-- RecyclerView para mostrar perfiles -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewWorkers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        tools:listitem="@layout/item_worker" />
</LinearLayout>
